<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <CustomLevels>
        <CustomLevel name="DIAGNOSTIC" intLevel="350" />
        <CustomLevel name="NOTICE" intLevel="450" />
        <CustomLevel name="DEBUG" intLevel="550" />
        <CustomLevel name="FATAL" intLevel="550" />
    </CustomLevels>

    <Appenders>
        <Console name="Console">
            <PatternLayout pattern="%d{yyyy-MM-d HH:mm:ss} %p %-5level %logger{36} %L - %msg%n"/>
        </Console>
        <File name="MyFile" fileName="target/log-output/log_file.log">
            <PatternLayout pattern="%d{yyyy-MM-d HH:mm:ss} [%t] %-7level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
<!--    yyyy-MM-dd HH:mm:ss <уровень лога> <имя класса> <номер строки вызова записи в лог> <сообщение лога>-->

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console" level="trace" />
            <AppenderRef ref="MyFile" level="diagnostic" />
        </Root>
    </Loggers>

</Configuration>